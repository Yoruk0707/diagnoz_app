# ═══════════════════════════════════════════════════════════════
# DiagnozApp - pubspec.yaml
# ═══════════════════════════════════════════════════════════════
# 
# DEPENDENCY MANAGEMENT (vcsecurity.md § 6):
# - Use EXACT versions (not ranges)
# - Always commit pubspec.lock
# - Audit dependencies regularly
# 
# WHY EXACT VERSIONS?
# - Reproducible builds
# - Supply chain attack protection
# - "It worked yesterday" problem prevention

name: diagnoz_app
description: Medical diagnosis simulation game for Turkish medical students.
publish_to: 'none'

version: 1.0.0+1

environment:
  sdk: '>=3.3.0 <4.0.0'

dependencies:
  flutter:
    sdk: flutter

  # ═══════════════════════════════════════════════════════════════
  # STATE MANAGEMENT (Strict Requirement)
  # ═══════════════════════════════════════════════════════════════
  # WHY: Riverpod for compile-time safety and testability
  flutter_riverpod: 2.5.1
  riverpod_annotation: 2.3.5

  # ═══════════════════════════════════════════════════════════════
  # FIREBASE
  # ═══════════════════════════════════════════════════════════════
  firebase_core: 4.3.0
  firebase_auth: 6.1.3   
  cloud_firestore: 6.1.1
  cloud_functions: 6.0.5
  firebase_crashlytics: 5.0.6
  firebase_analytics: 12.1.0
  firebase_performance: 0.11.1+3

  # ═══════════════════════════════════════════════════════════════
  # NAVIGATION
  # ═══════════════════════════════════════════════════════════════
  go_router: 13.2.0

  # ═══════════════════════════════════════════════════════════════
  # NETWORKING
  # ═══════════════════════════════════════════════════════════════
  connectivity_plus: 5.0.2
  http: 1.2.2

  # ═══════════════════════════════════════════════════════════════
  # LOCAL STORAGE (Case caching)
  # ═══════════════════════════════════════════════════════════════
  # WHY: Hive for offline case storage
  hive: 2.2.3
  hive_flutter: 1.1.0

  # ═══════════════════════════════════════════════════════════════
  # FUNCTIONAL PROGRAMMING
  # ═══════════════════════════════════════════════════════════════
  # WHY: Either<Failure, Success> pattern for error handling
  dartz: 0.10.1
  equatable: 2.0.5

  # ═══════════════════════════════════════════════════════════════
  # UI UTILITIES
  # ═══════════════════════════════════════════════════════════════
  flutter_svg: 2.0.10+1
  cached_network_image: 3.3.1
  shimmer: 3.0.0

  # ═══════════════════════════════════════════════════════════════
  # ICONS
  # ═══════════════════════════════════════════════════════════════
  cupertino_icons: 1.0.6

dev_dependencies:
  flutter_test:
    sdk: flutter

  # ═══════════════════════════════════════════════════════════════
  # CODE GENERATION
  # ═══════════════════════════════════════════════════════════════
  build_runner: 2.4.8
  riverpod_generator: 2.4.0
  hive_generator: 2.0.1
  json_serializable: 6.7.1

  # ═══════════════════════════════════════════════════════════════
  # LINTING
  # ═══════════════════════════════════════════════════════════════
  flutter_lints: 3.0.1

  # ═══════════════════════════════════════════════════════════════
  # TESTING
  # ═══════════════════════════════════════════════════════════════
  mockito: 5.4.4
  mocktail: 1.0.3
  integration_test:
    sdk: flutter

flutter:
  uses-material-design: true

  # ═══════════════════════════════════════════════════════════════
  # FONTS (ui_ux_design.md § Typography)
